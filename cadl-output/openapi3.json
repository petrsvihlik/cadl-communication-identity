  "components": {
    "schemas": {
      "CreateTokenWithScopes": {
        "type": "object",
        "properties": {
          "createTokenWithScopes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "x-cadl-name": "string[]"
          },
          "expiresInMinutes": {
            "type": "integer",
            "format": "int32",
            "minimum": 60,
            "maximum": 1440
          }
        }
      },
      "CommunicationUserIdentifierAndToken": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/CommunicationUserIdentifier"
          },
          "token": {
            "$ref": "#/components/schemas/AccessToken"
          }
        },
        "required": [
          "user",
          "token"
        ]
      },
      "ExchangeAccessTokenRequest": {
        "type": "object",
        "properties": {
          "appId": {
            "type": "string"
          },
          "token": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          }
        },
        "required": [
          "appId",
          "token",
          "userId"
        ]
      },
      "CommunicationUserIdentifier": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "required": [
          "id"
        ]
      },
      "AccessToken": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          },
          "expiresOn": {
            "type": "string",
            "format": "date"
          }
        },
        "required": [
          "token",
          "expiresOn"
        ]
      }
